##### Remember this is a velocity template
set -e
set -x

if [[ -n "${javaHome}" ]]
then
  export JAVA_HOME=$javaHome
  export PATH=$JAVA_HOME/bin/:$PATH
fi
export ANT_OPTS="-Xmx1g -XX:MaxPermSize=256m ${antEnvOpts}"
export M2_OPTS="-Xmx1g -XX:MaxPermSize=256m ${mavenEnvOpts}"
cd $workingDir/
cd ../
RESULTS_DIR_NAME=$(basename $(pwd))
cd $workingDir/
(
  if [[ "$clearLibraryCache" == "true" ]]
  then
    rm -rf ivy maven
  fi
  mkdir -p maven ivy
  if [[ -d ${repositoryName}-source ]] 
  then
    rm -rf ${repositoryName}-source
  fi
  if [[ ! -d ${repositoryName}-source ]]
  then
    mkdir ${repositoryName}-source
    for d in ../../*; do if [ "$(basename "$d")" != $RESULTS_DIR_NAME ]; then cp -pR "$d" ${repositoryName}-source; fi; done
  fi
)


